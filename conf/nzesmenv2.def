BootStrap: docker
From: intel/oneapi-hpckit:devel-ubuntu18.04

%environment
    export PATH=$HOME/bin:$PATH

%post

    apt-get update && apt-get upgrade -y
  
    apt-get install -y wget file vim

    echo "> Setting timezone to UTC non-interactively..."
    ln -fs /usr/share/zoneinfo/UTC /etc/localtime
    apt-get install -y tzdata
    dpkg-reconfigure --frontend noninteractive tzdata

    # Pretend we build a vargrant VM
    git clone https://github.com/pletzer/metomi-vms.git /vagrant

    cd /vagrant
    echo "> Build base...."
    bash -x install.sh ubuntu 1804

    echo "> Install UM dependencies"
    for version in 10.7; do
      bash -x /usr/local/bin/install-um-extras --output-dir "/usr/local/um${version}" --version ${version}
    done

